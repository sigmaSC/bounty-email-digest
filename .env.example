# Bounty Board API
API_BASE_URL=https://aibountyboard.com/api

# Resend API key (https://resend.com - free tier available)
RESEND_API_KEY=re_xxxxxxxxxxxx

# From email address (must be verified in Resend)
FROM_EMAIL=bounties@yourdomain.com

# Server port for subscriber management API
PORT=3300

# Path to subscriber data
SUBSCRIBERS_FILE=./subscribers.json

# Path to digest state
STATE_FILE=./digest-state.json

# How often to check if digests need sending (ms)
CHECK_INTERVAL_MS=3600000
